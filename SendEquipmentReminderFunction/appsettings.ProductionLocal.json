{
  "Values": {
    "FUNCTIONS_WORKER_RUNTIME": "dotnet-isolated"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Error",
      "Microsoft.AspNetCore": "Error"
    }
  },

  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.MSSqlServer"
    ],
    "MinimumLevel": {
      "Default": "Error",
      "Override": {
        "Microsoft": "Error",
        "System": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Server=localhost;Database=SegmentSniper;Trusted_Connection=True;TrustServerCertificate=True;",
          "sinkOptions": {
            "tableName": "SegmentSniperLog",
            "autoCreateSqlTable": false
          }
        }
      }
    ],
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "SegmentSniper"
    }
  },

  "ConnectionStrings": {
    "SegmentSniperConnectionString": "Server=localhost;Database=SegmentSniper;Trusted_Connection=True;TrustServerCertificate=True;"
  }
}
